{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (Only Backend)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--disable-extensions"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "preLaunchTask": "esbuild-watch"
    }
  ]
}
